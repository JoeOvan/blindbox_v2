page {
  background: #ffffff;
}
.shop-wrap {
  padding: 20rpx 30rpx;
}
.shop-wrap .icon-shop {
  display: inline-block;
  width: 32rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.shop-wrap .shop-name {
  display: inline-block;
  font-size: 30rpx;
  font-weight: 400;
  color: #FD5C40;
  vertical-align: bottom;
}
.shop-wrap .icon-arrows {
  display: inline-block;
  width: 13rpx;
  height: 25rpx;
  margin-left: 15rpx;
}
.cart-goods-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 5rpx 0 15rpx 0;
  margin: 0 30rpx;
  background: #ffffff;
  border-bottom: 1rpx solid #f1f1f1;
}
.cart-goods-item .goods-cover {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
}
.cart-goods-item .goods-cover .cover {
  display: inline-block;
  width: 100%;
  height: 100%;
}
.cart-goods-item .goods-info {
  -webkit-box-flex: 5;
  -webkit-flex: 5;
          flex: 5;
  text-align: left;
}
.cart-goods-item .goods-info .title {
  height: 45rpx;
  line-height: 45rpx;
  font-size: 30rpx;
  font-weight: 400;
  color: #000000;
}
.cart-goods-item .goods-info .intro {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #010101;
}
.cart-goods-item .goods-info .price-wrap {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.cart-goods-item .goods-info .price-wrap .price {
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #010101;
}
.cart-goods-item .goods-info .price-wrap .price .sign {
  font-size: 24rpx;
}
.cart-goods-item .goods-info .price-wrap .count-wrap {
  position: relative;
  bottom: 20rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.cart-goods-item .goods-info .price-wrap .count-wrap .btn-again {
  height: 46rpx;
  line-height: 46rpx;
  padding: 0 18rpx;
  background: #FD5C40;
  border-radius: 23rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: #FFFFFF;
}
.prize-status-wrap {
  padding: 86rpx;
}
.prize-status-wrap .prize-cover {
  position: relative;
  width: 363rpx;
  height: 363rpx;
  margin: 0 auto;
}
.prize-status-wrap .prize-cover .cover {
  display: inline-block;
  width: 100%;
  height: 100%;
}
.prize-status-wrap .prize-cover .mask {
  position: absolute;
  top: 0;
  left: 0;
  display: inline-block;
  width: 100%;
  height: 100%;
  background: #ffffff;
  opacity: 0.89;
}
.prize-status-wrap .prize-cover .prize-status {
  position: absolute;
  bottom: 0;
  right: 0;
}
.prize-status-wrap .prize-cover .prize-status .status {
  display: inline-block;
  width: 162rpx;
  height: 160rpx;
}
