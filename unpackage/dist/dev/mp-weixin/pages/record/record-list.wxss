page {
  background: #ffffff;
}
.record-list-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 27rpx 0;
  margin: 0 20rpx;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-bottom: 1rpx solid #f1f1f1;
}
.record-list-item .record-cover {
  width: 100rpx;
  margin-right: 10rpx;
}
.record-list-item .record-cover .cover {
  display: inline-block;
  width: 100%;
  height: 70rpx;
}
.record-list-item .record-info {
  width: 400rpx;
  height: 70rpx;
  font-weight: 400;
  color: #000000;
}
.record-list-item .record-info .title {
  width: 100%;
  height: 45rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.record-list-item .record-info .time {
  font-size: 24rpx;
  color: #888888;
}
.record-list-item .record-status {
  display: inline-block;
  width: 130rpx;
}
.record-list-item .record-status .btn {
  display: inline-block;
  color: #ffffff;
  padding: 0 17rpx;
  height: 40rpx;
  line-height: 40rpx;
  border-radius: 20rpx;
  text-align: center;
  font-size: 20rpx;
  vertical-align: middle;
}
.record-list-item .record-status .btn-unused {
  background: #FD5C40;
}
.record-list-item .record-status .btn-used {
  background: #38CD54;
}
.record-list-item .record-status .btn-invalid {
  color: #888888;
  background: #eeeeee;
}
.record-list-item .icon-arrows {
  display: inline-block;
  width: 13rpx;
  height: 25rpx;
  margin-left: 40rpx;
}

